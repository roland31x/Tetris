<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="Tetris" Height="800" Width="1000">
    <Canvas x:Name="MainCanvas">
        <Canvas.Background>
            <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
        </Canvas.Background>
        <Image Height="172" Canvas.Left="52" Source="/tetris-logo.png" Stretch="Fill" Canvas.Top="22" Width="248" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Grid x:Name="Area"/>
        <Grid x:Name="NextBlock"></Grid>
        <Grid x:Name="HoldBlock"></Grid>
        <Label x:Name="CurrentLevelLabel" Height="116" Width="316" Canvas.Left="666" Canvas.Top="54" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bauhaus 93" Content="LEVEL" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF00E4FF" Offset="1"/>
                    <GradientStop Color="#FF1800FF" Offset="0"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

        <Label x:Name="ProgressBackground" Height="42" Width="306" Canvas.Left="347" Canvas.Top="699" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{StaticResource BlackBlueGradient}" BorderThickness="4,4,4,4" BorderBrush="{StaticResource BlueBlueGradientR}">
        </Label>


        <Button Foreground ="{StaticResource RainbowGradient1}" Background="{StaticResource BlackBlueGradient}" Style ="{DynamicResource ButtonHoverStyle}" x:Name="StartButton" Click="StartButton_Click" Height="63" Canvas.Left="367" Canvas.Top="22" Width="266" HorizontalAlignment="Left" VerticalAlignment="Top" Content="START GAME" FontSize="36" BorderBrush="{StaticResource BlueBlueGradient}" FontFamily="Showcard Gothic">
        </Button>
        <Label x:Name="CurrentLevelLabel_Copy" Height="54" Width="248" Canvas.Left="700" Canvas.Top="488" FontFamily="Bauhaus 93" Content="SCORE" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Black">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF00E4FF" Offset="1"/>
                    <GradientStop Color="#FF1800FF" Offset="0"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label x:Name="ScoreLabel" Height="42"  Width="248" Canvas.Left="700" Canvas.Top="547" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Content="" FontSize="22" FontFamily="Bernard MT Condensed" BorderBrush="{StaticResource BlueBlueGradientR}" BorderThickness="4,4,4,4" Background="{StaticResource BlackBlueGradient}">
        </Label>

    </Canvas>
</Window>
